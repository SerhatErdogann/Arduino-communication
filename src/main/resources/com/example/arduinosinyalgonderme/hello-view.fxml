<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="288.0" prefWidth="339.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.arduinosinyalgonderme.SignalController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="isigiAcButton" mnemonicParsing="false" onAction="#isigiAcButton" text="Led'i Aç" />
            <Button fx:id="isigiKapatButton" mnemonicParsing="false" onAction="#isigiKapatButton" text="Led'i Kapat">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Label text="Sinyal gönderin( /sayı =&gt; yanıp söndürür)" />
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="textField" prefHeight="26.0" prefWidth="181.0" />
            <Button fx:id="buton" mnemonicParsing="false" onAction="#messageButton" text="Gönder">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" />
   </children>
</VBox>
